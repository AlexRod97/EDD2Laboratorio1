<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <Button
        android:id="@+id/btnOpenFile"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnComprimir"
        android:layout_marginTop="56dp"
        android:text="Archivo a comprimir" />

    <TextView
        android:id="@+id/tvComprimir"
        android:layout_width="220dp"
        android:layout_height="255dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnComprimir"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnDescomprimir"
        android:layout_marginStart="38dp"
        android:text="Comprimir" />

    <Button
        android:id="@+id/btnOpenFile2"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnDescomprimir"
        android:layout_alignTop="@+id/btnOpenFile"
        android:text="Archivo a descomprimir" />

    <Button
        android:id="@+id/btnDescomprimir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="63dp"
        android:text="Descomprimir" />
</RelativeLayout>