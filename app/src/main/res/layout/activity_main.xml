<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnOpenFile"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="@string/abrir_archivo" />

    <Button
        android:id="@+id/btnComprimir"
        android:layout_width="125dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-37dp"
        android:layout_marginTop="148dp"
        android:layout_toStartOf="@+id/btnOpenFile"
        android:text="Comprimir" />

    <Button
        android:id="@+id/btnDescomprimir"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnComprimir"
        android:layout_marginEnd="60dp"
        android:text="Descomprimir" />

    <TextView
        android:id="@+id/tvDescomprimir"
        android:layout_width="124dp"
        android:layout_height="263dp"
        android:layout_alignStart="@+id/btnDescomprimir"
        android:layout_alignTop="@+id/tvComprimir"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvComprimir"
        android:layout_width="124dp"
        android:layout_height="263dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnComprimir"
        android:layout_marginBottom="44dp"
        android:text="TextView" />
</RelativeLayout>